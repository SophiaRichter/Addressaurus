{
	"manifest_version": 2,
	"name": "Addressaurus: The Address Finder",
	"version": "1.0.2",
	"description": "Addressaurus makes it a snap to search for addresses on a map",
	
	"icons": {
		"48": "icon48.png",
		"96": "icon96.png"
	},
	
	"options_ui": 
	{
		"page": "settings.html"
	},

    "background": 
	{
        "scripts": 
		[
            "background.js"
        ],
        "persistent": false
    },

    "permissions": 
	[
        "activeTab",
        "contextMenus",
		"storage"
    ]
}
